    <tr>
    	<th align="right"><label for="group_id">Group:</label></th>
    	<td>
    	    <select name="group_id" id="group_id">
    	    	[% FOREACH group = field.legal_groups %]
               [% NEXT IF group.name == '' %]
                <option value="[% group.id FILTER none %]"
                 [% ' selected="selected"' 
                   IF group.id == value.group.id %]>
                  [% group.name FILTER html -%]
                </option>
              [% END %]
    	    </select>
         </td>
    </tr>
